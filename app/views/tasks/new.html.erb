<h2>Create your task</h2>

<%= form_for(:task, :url => {:controller => 'tasks', :action => 'create'}) do |f| %>
  <p>Task name: <%= f.text_field :paideuo %></p>
  <p>Complete by: <%= f.date_select :datetime %></p>

  <%= fields_for(:partner) do |pf| %>
    <%= pf.label :name %>
    <%= pf.text_field :name %>
    <%= pf.label :email %>
    <%= pf.text_field :email %>
  <% end %>

  <%= f.submit %>
  <% end %>