  <% if @current_user.present? %>
    <% @current_user.categories.each do |category | %>
    <div class="home-page-block">
    <h3>Categories</h3>
    <h5><%= category.heading %></h5>
    <h3>Tasks</h3>
    <% category.tasks.each do |task| %>
    <p><%= task.paideuo %> Due: <%= task.datetime.strftime('%I:%M %p %B %d, %Y') if task.datetime %> <%= "ago" if task.datetime && task.datetime < Time.now  %>
    <% end %>
    </div>

    <% end %>

  <% else %>
  <p>Please Sign up or login</p>


  <% end %>

